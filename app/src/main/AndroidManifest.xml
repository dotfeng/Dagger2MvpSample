<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fengg.dagger2mvpsample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.view.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent.Splash.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.view.activity.SecondActivity"
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name=".ui.view.activity.ThirdActivity"
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name=".ui.view.activity.FourthActivity"
            android:theme="@style/AppTheme.Transparent"></activity>
    </application>

</manifest>